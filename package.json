    "react-addons-test-utils": "15.3.0",
    "svgo": "^0.6.6",
    "tape": "^4.5.1",
    "tape-jsx-equals": "^1.0.0",
    "webpack-dev-server": "^2.9.3"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && webpack --config webpack.config.js --progress --color --watch",
    "build": "npm run clean && webpack --config webpack.config.js --progress --color --display-modules",
    "build:json": "npm run clean && webpack --config webpack.config.js --json > build.json",
    "build:start": "npm run clean && webpack-dev-server --config webpack.config.js --progress --color",
    "clean": "rm ./build -r || exit 0",
    "optimise:svg": "find public/images/ -name '*.svg' -exec svgo '{}' ';'",
    "optimise:png": "find public/images -name '*.png' -print0 | xargs -0 optipng -nc -nb -o7 -silent",
    "optimise:jpg": "find public/images -name '*.jpg' -exec jpegtran -copy none -progressive -optimize -outfile '{}' '{}' ';'",
    "optimise:images": "yarn run optimise:svg && yarn run optimise:png && yarn run optimise:jpg",
    "gzip": "while read -r extension; do find public -name \"$extension\" -print0 | xargs -0 gzip -9 -k -f; done < .gziprc",
    "mvgz": "for file in $(find public -name '*.gz'); do mv \"$file\" \"${file%.gz}\"; done",
    "lint": "yarn run lint:js & yarn run lint:styles",
    "lint:js": "eslint src",
    "lint:styles": "scss-lint",
    "test": "babel-tape-runner -r ./lib/css-hook.js ./src/app/**/__tests__/*.test.js | faucet",
    "coverage": "istanbul cover babel-tape-runner -r ./lib/css-hook.js -- ./src/app/**/__tests__/*.test.js",
    "check": "yarn run lint:js & yarn run lint:styles & yarn run test & yarn run coverage"
  },
  "pre-commit": [
    "lint:js",
    "lint:styles",
    "test",
    "coverage"
  ],
  "browserslist": [
    "Firefox > 20",
    "last 5 versions"
  ]
}
